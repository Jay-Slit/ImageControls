{
  "manifest_version": 2,

  "name": "Image Controls",
  "description": "ImageControls allows you a range of options
                  for any image you find on the web.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus",
    "tabs",
    "http://*/*", 
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  }


}
